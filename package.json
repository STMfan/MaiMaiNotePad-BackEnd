{
  "name": "maimainotepad-backend",
  "version": "2.0.0",
  "description": "MaiMaiNotePad backend API - Cloudflare Workers Edition",
  "main": "src/workers/index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "echo 'Build completed - Cloudflare Workers uses source files directly'",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/ --ext .js,.ts",
    "lint:fix": "eslint src/ --ext .js,.ts --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "type-check": "tsc --noEmit",
    "migrate": "node src/scripts/migrate-mongodb-to-d1.js",
    "db:generate": "wrangler d1 execute maimai-db --file=src/database/schema.sql",
    "db:migrate": "wrangler d1 execute maimai-db --file=src/database/migrations/$(date +%Y%m%d%H%M%S).sql",
    "db:backup": "wrangler d1 export maimai-db --output=backups/$(date +%Y%m%d_%H%M%S).sql",
    "db:restore": "wrangler d1 execute maimai-db --file=",
    "env:validate": "node src/scripts/validate-environment.js",
    "security:audit": "npm audit && node src/scripts/security-audit.js",
    "docs:generate": "node src/scripts/generate-docs.js",
    "performance:analyze": "node src/scripts/performance-analyze.js"
  },
  "keywords": [
    "maimainotepad",
    "knowledge-management",
    "note-taking",
    "cloudflare-workers",
    "d1-database",
    "r2-storage",
    "serverless",
    "api"
  ],
  "author": "MaiMaiNotePad Team",
  "license": "MIT",
  "dependencies": {
    "hono": "^3.12.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "jose": "^5.2.0",
    "uuid": "^9.0.1",
    "mime-types": "^2.1.35",
    "file-type": "^19.0.0",
    "sharp": "^0.33.2",
    "zod": "^3.22.4",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "winston-transport": "^4.6.0",
    "nodemailer": "^6.9.8",
    "nodemailer-smtp-transport": "^2.7.4",
    "crypto-js": "^4.2.0",
    "lodash": "^4.17.21",
    "dayjs": "^1.11.10",
    "mime": "^4.0.1",
    "multer": "^1.4.5-lts.1",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "xlsx": "^0.18.5",
    "pdf-lib": "^1.17.1",
    "puppeteer": "^21.7.0",
    "turndown": "^7.1.2",
    "marked": "^11.1.1",
    "dompurify": "^3.0.7",
    "jsdom": "^23.2.0",
    "sanitize-html": "^2.11.0",
    "validator": "^13.11.0",
    "express-validator": "^7.0.1",
    "rate-limiter-flexible": "^4.0.1",
    "express-slow-down": "^2.0.1"
  },
  "devDependencies": {
    "wrangler": "^3.22.1",
    "@cloudflare/workers-types": "^4.20231218.0",
    "vitest": "^1.1.3",
    "@vitest/coverage-v8": "^1.1.3",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^2.1.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "@types/node": "^20.11.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/uuid": "^9.0.7",
    "@types/mime-types": "^2.1.4",
    "@types/compression": "^1.7.5",
    "@types/nodemailer": "^6.4.14",
    "@types/crypto-js": "^4.2.1",
    "@types/lodash": "^4.14.202",
    "@types/multer": "^1.4.11",
    "@types/jsdom": "^21.1.6",
    "mongodb": "^6.3.0",
    "@types/mongodb": "^4.0.7",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "supertest": "^6.3.4",
    "@types/supertest": "^6.0.2",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maimainotepad/maimainotepad-backend.git"
  },
  "bugs": {
    "url": "https://github.com/maimainotepad/maimainotepad-backend/issues"
  },
  "homepage": "https://maimainote.com",
  "workspaces": [
    "src/*"
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/scripts/**",
      "!src/workers/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:security/recommended"
    ],
    "env": {
      "node": true,
      "es2022": true,
      "worker": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "warn",
      "security/detect-object-injection": "warn",
      "security/detect-eval-with-expression": "error",
      "security/detect-non-literal-fs-filename": "warn",
      "security/detect-unsafe-regex": "error",
      "security/detect-buffer-noassert": "error",
      "security/detect-child-process": "warn",
      "security/detect-disable-mustache-escape": "error",
      "security/detect-no-csrf-before-method-override": "error",
      "security/detect-non-literal-regexp": "warn",
      "security/detect-non-literal-require": "warn",
      "security/detect-possible-timing-attacks": "warn",
      "security/detect-pseudoRandomBytes": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  }
}