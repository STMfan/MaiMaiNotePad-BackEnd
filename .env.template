# 管理员账户配置
ADMIN_USERNAME=your_admin_username
ADMIN_PWD=your_admin_password

# 最高权限密码（用于敏感操作）
HIGHEST_PASSWORD=your_highest_password

# 外部域名配置
EXTERNAL_DOMAIN=your_domain.com

# 邮箱服务配置
MAIL_HOST=smtp.qq.com
MAIL_USER=your_email@qq.com
MAIL_PORT=465
MAIL_PWD=your_email_authorization_code  # QQ邮箱授权码或其他邮箱的SMTP密码

# 服务器配置
PORT=9278
HOST=0.0.0.0

# 数据库配置
DATABASE_URL=sqlite:///data/mainnp.db

# JWT配置
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# 文件上传配置
MAX_FILE_SIZE_MB=100
UPLOAD_DIR=uploads

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log