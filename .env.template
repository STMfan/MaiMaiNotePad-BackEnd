# 超级管理员账户配置（仅在数据库为空时用于初始化）
SUPERADMIN_USERNAME=superadmin
SUPERADMIN_PWD=admin123456

# 最高权限密码（用于敏感操作，例如提权为管理员 / 版主）
HIGHEST_PASSWORD=your_highest_password

# 外部域名配置（用于构造默认邮箱等）
EXTERNAL_DOMAIN=example.com

# 邮箱服务配置
MAIL_HOST=smtp.qq.com
MAIL_USER=your_email@qq.com
MAIL_PORT=465
MAIL_PWD=your_email_authorization_code  # 授权码或SMTP密码
MAIL_TIMEOUT=30

# 服务器配置
PORT=9278
HOST=0.0.0.0

# 数据库配置（同时用于应用与 Alembic）
DATABASE_URL=sqlite:///data/mainnp.db

# JWT配置（未设置时会在开发环境自动生成随机密钥）
JWT_SECRET_KEY=change_me_to_a_very_long_random_string_like_this_example_32_chars_or_more
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 上传配置
MAX_FILE_SIZE_MB=100
UPLOAD_DIR=uploads

# 测试脚本配置（可选，用于 scripts/* 测试数据脚本）
#MAIMNP_BASE_URL=http://0.0.0.0:9278
