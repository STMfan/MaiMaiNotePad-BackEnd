# ============================================================================
# Docker Compose 环境变量配置文件
# 用途：为 Docker Compose 提供环境变量
# 说明：复制此文件为 .env 并根据实际情况修改
# ============================================================================

# ============================================================================
# Redis 配置
# ============================================================================

# Redis 端口（默认 6379）
CACHE_PORT=6379

# Redis 密码（留空表示无密码，生产环境强烈建议设置）
# 注意：如果设置了密码，需要在应用的 .env 文件中同步设置 CACHE_PASSWORD
CACHE_PASSWORD=

# ============================================================================
# 应用配置（如果启用 app 服务）
# ============================================================================

# 应用端口
PORT=8000

# 数据库 URL
DATABASE_URL=sqlite:///data/mainnp.db

# 缓存配置
CACHE_ENABLED=true
CACHE_HOST=redis
CACHE_DB=0
CACHE_KEY_PREFIX=maimnp
CACHE_DEFAULT_TTL=3600
CACHE_MAX_CONNECTIONS=10
CACHE_SOCKET_TIMEOUT=5
CACHE_SOCKET_CONNECT_TIMEOUT=5
CACHE_RETRY_ON_TIMEOUT=true

# JWT 配置
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 管理员配置
SUPERADMIN_USERNAME=superadmin
SUPERADMIN_PWD=your-superadmin-password-here
HIGHEST_PASSWORD=your-highest-password-here

# 邮件配置
MAIL_HOST=smtp.example.com
MAIL_USER=your-email@example.com
MAIL_PWD=your-email-password
MAIL_PORT=587
MAIL_TIMEOUT=30

# 外部域名
EXTERNAL_DOMAIN=example.com
